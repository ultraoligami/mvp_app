<%= form_with model: post, local: true, class: "mt-4" do |f| %>

  <div class="mb-3">
    <%= f.label :title, "タイトル", class: "form-label" %>
    <%= f.text_field :title, class: "form-control" %>
  </div>

  <div class="mb-3">
    <%= f.label :category, "ジャンル", class: "form-label" %>
    <%= f.select :category,
          ["家事", "仕事", "健康", "勉強", "お金", "人間関係", "その他"],
          { include_blank: "選択してください" },
          class: "form-select" %>
  </div>

  <div class="mb-3">
    <%= f.label :content, "内容", class: "form-label" %>
    <%= f.text_area :content, rows: 6, class: "form-control", id: "post_content" %>
  </div>

  <!-- ▼ AIユーモア生成ボタン ▼ -->
  <button type="button"
          id="ai-humor-btn"
          class="btn btn-outline-primary mb-3">
    AIでユーモアに変換
  </button>
  <!-- ▲ AIユーモア生成ボタン ▲ -->

  <%= f.submit "投稿する", class: "btn btn-primary" %>

  <div class="form-check mt-3">
    <%= f.check_box :is_anonymous, class: "form-check-input" %>
    <%= f.label :is_anonymous, "匿名で投稿する", class: "form-check-label" %>
  </div>
<% end %>