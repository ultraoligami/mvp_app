<h2>プロフィール編集</h2>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>

  <%= render "devise/shared/error_messages", resource: resource %>

  <!-- ▼▼ ニックネーム ▼▼ -->
  <div class="field">
    <%= f.label :nickname, "ニックネーム" %><br />
    <%= f.text_field :nickname, class: "form-control" %>
  </div>
  <!-- ▲▲ ニックネーム ▲▲ -->

  <div class="field mt-3">
    <%= f.label :email, "メールアドレス" %><br />
    <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-control" %>
  </div>

  <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
    <div class="mt-2">
      現在、以下のメールアドレスの確認待ちです：
      <%= resource.unconfirmed_email %>
    </div>
  <% end %>

  <div class="field mt-3">
    <%= f.label :password, "新しいパスワード" %>
    <i>(変更しない場合は空欄のままでOKです)</i><br />
    <%= f.password_field :password, autocomplete: "new-password", class: "form-control" %>

    <% if @minimum_password_length %>
      <em>（パスワードは最低 <%= @minimum_password_length %> 文字必要です）</em>
    <% end %>
  </div>

  <div class="field mt-3">
    <%= f.label :password_confirmation, "新しいパスワード（確認用）" %><br />
    <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "form-control" %>
  </div>

  <div class="field mt-3">
    <%= f.label :current_password, "現在のパスワード" %>
    <i>(変更内容を確定するために必要です)</i><br />
    <%= f.password_field :current_password, autocomplete: "current-password", class: "form-control" %>
  </div>

  <div class="actions mt-4">
    <%= f.submit "更新する", class: "btn btn-primary" %>
  </div>

<% end %>

<h3 class="mt-4">アカウント削除</h3>

<div>
  アカウントを削除しますか？<br />
  <%= button_to "アカウントを削除する",
      registration_path(resource_name),
      data: { confirm: "本当に削除しますか？", turbo_confirm: "本当に削除しますか？" },
      method: :delete,
      class: "btn btn-danger mt-2" %>
</div>

<%= link_to "戻る", :back, class: "btn btn-secondary mt-3" %>